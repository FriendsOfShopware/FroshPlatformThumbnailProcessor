<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/platform/trunk/src/Core/System/SystemConfig/Schema/config.xsd">

    <card>
        <title>Configuration</title>
        <input-field>
            <name>ThumbnailPattern</name>
            <label>Thumbnail-Pattern</label>
            <placeholder>{mediaUrl}/{mediaPath}?width={width}</placeholder>
            <defaultValue>{mediaUrl}/{mediaPath}?width={width}</defaultValue>
            <helpText>available variables:
                {mediaUrl}: https://cdn.test.de/
                {mediaPath}: media/image/5b/6d/16/tea.png
                {width}: 800
            </helpText>
        </input-field>

        <input-field type="bool">
            <name>ProcessOriginalImages</name>
            <label>Process Original Images</label>
            <defaultValue>1</defaultValue>
        </input-field>

        <input-field type="int">
            <name>ProcessOriginalImageMaxWidth</name>
            <label>Maximum width of original image</label>
            <defaultValue>3000</defaultValue>
        </input-field>

        <input-field>
            <name>ExtensionBlacklist</name>
            <label>Blacklist for file extensions</label>
            <defaultValue>svg, ico</defaultValue>
            <helpText>
                You can set a list of file extension seperated by comma which will not be processed. F.e. some services will convert SVG files into jpg or webp which results in much bigger files. That is why we set svg as default here. Default: svg, ico
            </helpText>
        </input-field>

        <component name="frosh-thumbnail-processor-info-texts">
            <name>froshthumbnailprocessorinfotexts</name>
        </component>

        <component name="frosh-thumbnail-processor-config-restriction">
            <name>configRestriction</name>
        </component>
    </card>
</config>
